<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">



<header class="bg-primary text-white py-3">
    <div class="container d-flex align-items-center">
      <img src="/Assets/TeamLogo.png" alt="HaMiJo Logo" class="me-3" style="height: 50px;">
      <h1 class="mb-0">HaMiJo</h1>
    </div>
</header>


<h1>All Tournaments</h1>
<ul>
  <% tournaments.forEach(tournament => { %>
    <li>
      <%= tournament.name %> - <%= tournament.date.toDateString() %>
      <a href="/edit/<%= tournament._id %>">Edit</a>
      <a href="/delete/<%= tournament._id %>">Delete</a>
    </li>
  <% }) %>
</ul>
<a href="/create">Create New Tournament</a>

  
